// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Equipment {
  id          Int     @id @default(autoincrement())
  name        String
  type        String
  dice1       String?
  dice2       String?
  dice3       String?
  description String
}

model Ennemy {
  id          Int     @id @default(autoincrement())
  name        String
  phase       Int
  type        String
  image       String?
  life        String?
  attack      String?
  description String
}

model User {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
}
